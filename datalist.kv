<DataListBox>:
    dataListLayout : data_list_layout
    orientation: 'vertical'
    loadFile: load_file
    saveFile: save_file
    deleteFile : delete_file
    
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout:
        id : label_float
        size_hint : (1, None)
        height : 40
        Label:
            size_hint : (None, None)
            size: self.texture_size
            font_size: 17
            font_family: "arial"
            markup: True
            text: 'Training Dataset'
            x: root.x + 10
            top: root.top - 20
        
        Button:
            id: save_file
            text: "Save File"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.92}
            y : root.y + 10
            disabled: True
            on_release: app.manager.save_data(self)
        
        Button:
            id: load_file
            text: "Load File"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.8}
            y : root.y + 10
            disabled: False
            on_release: app.manager.load_data(self)
        
        Button:
            id: delete_file
            text: "Delete"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.68}
            y : root.y + 10
            disabled: True
            on_release: app.manager.delete_data()

    DataListLayout:
        id : data_list_layout
        padding: [20]
        spacing: 10