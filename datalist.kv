<DataListBox>:
    dataListLayout : data_list_layout
    orientation: 'vertical'
    
    canvas:
        Color:
            rgb: 0.45, 0.45, 0.45
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout:
        id : label_float
        size_hint : (1, None)
        height : 40

        Label:
            size_hint : (None, None)
            size: dp(150), dp(20)
            text_size : self.size
            halign : 'left'
            valign : 'middle'
            font_size: 17
            font_family: "arial"
            markup: True
            text: 'Training Dataset'
            x: root.x + 10
            top: root.top - 20
        
        Button:
            text: "Save File"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.92}
            y : root.y + 10
            disabled: False if len(data_list_layout.children) >0 else True
            on_release: app.manager.save_data(self)
        
        Button:
            text: "Load File"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.8}
            y : root.y + 10
            disabled: False
            on_release: app.manager.load_data(self)
        
        Button:
            text: "Delete"
            background_color: [1 , 0, 1, 0.6]
            size_hint: (None, None)
            size: (80, 30)
            pos_hint : {'center_x' : 0.68}
            y : root.y + 10
            disabled: True if root.deleteFile == False else False
            on_release: app.manager.delete_data(self)

    DataListLayout:
        id : data_list_layout
        padding: [20]
        spacing: 10